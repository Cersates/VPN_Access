<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.vpn">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:name="com.vpn.vkaccess.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name="com.vpn.vkaccess.activity.LauncherActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.vpn.vkaccess.activity.LoaderActivity"
            android:noHistory="true" />

        <activity android:name="com.vpn.vkaccess.activity.HomeActivity"/>

        <activity android:name="com.vpn.vkaccess.activity.ServersListActivity" />

        <activity
            android:name="com.vpn.vkaccess.activity.ServerActivity"
            android:launchMode="singleTop" />

        <activity
            android:name="com.vpn.vkaccess.activity.ServersInfo"
            android:theme="@style/AppTheme.PopUp" />

        <service
            android:name="de.blinkt.openvpn.core.OpenVPNService"
            android:permission="android.permission.BIND_VPN_SERVICE">
            <intent-filter>
                <action android:name="android.net.VpnService" />
            </intent-filter>
        </service>

    </application>

</manifest>